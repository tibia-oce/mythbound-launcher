{
  "branches": [
    {
      "name": "main",
      "prerelease": false
    }
  ],
  "tagFormat": "v${version}",
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/release-notes-generator",
      {
        "writerOpts": {
          "headerPartial": ""
        }
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "artifacts/release/mythbound-launcher-windows.zip",
            "name": "mythbound-launcher-windows-v${nextRelease.version}.zip",
            "label": "Windows Launcher (Full Package)"
          },
          {
            "path": "artifacts/release/mythbound-launcher-setup.exe",
            "name": "mythbound-launcher-setup-v${nextRelease.version}.exe",
            "label": "Windows Installer"
          },
          {
            "path": "artifacts/release/mythbound-launcher-portable.exe", 
            "name": "mythbound-launcher-portable-v${nextRelease.version}.exe",
            "label": "Windows Portable"
          },
          {
            "path": "artifacts/release/mythbound-launcher-linux.tar.gz",
            "name": "mythbound-launcher-linux-v${nextRelease.version}.tar.gz",
            "label": "Linux Launcher (Full Package)"
          },
          {
            "path": "artifacts/release/mythbound-launcher.AppImage",
            "name": "mythbound-launcher-v${nextRelease.version}.AppImage",
            "label": "Linux AppImage"
          },
          {
            "path": "artifacts/release/mythbound-launcher.deb",
            "name": "mythbound-launcher-v${nextRelease.version}.deb",
            "label": "Linux Deb Package"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": [
          "CHANGELOG.md"
        ],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
